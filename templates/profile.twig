{% extends "base.twig" %}

{% block head %}
    <title>Profile | PuzzleMania</title>
    <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/navbar_styles.css"/>
    <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/numericlist_styles.css"/>
{% endblock %}

{% block name %}Home{% endblock %}

{% block header %}
    <!-- Dropdown -->
    <div class="dropdown">
        <!-- Email -->
        <button class="dropbtn">
            {% if email is not defined %}
                Menu
            {% else %}
                {{ email }}
            {% endif %}
        </button>
        <!-- Logout suboption -->
        <div class="dropdown-content">
            <a href="/home">Home</a>
            {% if team is not defined %}
                <a href="/join">Join a Team</a>
            {% else %}
                <a href="/team-stats">Your Team Stats</a>
                <a href="/game">Start a game</a>
            {% endif %}
            <a href="/riddles">List riddles</a>
            <a href="/log-out">Logout</a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class = "parent-content">
        <div class = "content">
            <h1 data-cy="profile">Here the user can see the profile information.</h1>
            <form action="{{ formAction }}"
                  enctype="multipart/form-data"
                  method="POST">
                <div class="form-group row">
                    <input type="email" name="email" value="{{ formData.email }}" disabled>
                </div>
                <div class="form-group row">
                    <input type="file" name="files[]" multiple>
                    {% if formErrors %}
                        <p class = "error">
                            <ol>
                                {% for error in formErrors %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            </ol>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group row">
                    <input type="submit" value="Update profile picture" class="submit-button">
                </div>
            </form>
            {% if errors is defined %}
                <ol>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ol>
            {% endif %}
        </div>
    </div>


{% endblock %}
