<!doctype html>
<html lang="en">
<head>

  {% block head %}
  {% endblock %}
  <link rel="icon" type="image/png" href="{{ full_url_for('home') }}assets/images/logo.png">
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/styles.css"/>
  <style>{% block styles %}{% endblock %}</style>

</head>
<body>
<header>
  <nav class="navbar">
    <!-- Logo and text -->
    <div class="navbar-logo">
      <img src="{{ full_url_for('home') }}assets/images/logo.png" alt="Logo" style="width: 60px; height: 60px; border-radius: 50%; margin-right: 10px;">
      {% block name %}{% endblock %}
    </div>
    {% block header %}{% endblock %}
  </nav>
</header>
  <main>
  {% block content %}{% endblock %}
  </main>
</body>
</html>
