<!doctype html>
<html lang="en">
<head>

  <title>{% block title %}{% endblock %}</title>
  <link rel="icon" type="image/png" href="{{ full_url_for('home') }}assets/images/logo.png">
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/styles.css"/>

  <style>
    .error {
      background-color: #ff6666;
      color: #fff;
      padding: 10px;
      border-radius: 5px;
      margin: 10px auto;
      width: 300px;
    }

    .box {
      position: absolute;
      margin-top: 20px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #CCC;
    }
    input[type='text'],
    input[type='email'],
    input[type='password'] {
      width: 200px;
      border-radius: 2px;
      border: 1px solid #CCC;
      padding: 10px;
      color: #333;
      font-size: 14px;
      margin-top: 10px;
      margin-bottom: 10px;
    }
    input[type='submit']{
      background: #016ABC;
      font-size: 20px;
      padding: 10px 50px;
      color: #fff;
      margin-top: 10px;
      border: 1px solid #eee;
      border-radius: 20px;
      box-shadow: 5px 5px 5px #eee;
      text-shadow: none;
    }
    input[type='submit']:hover {
      background: #001254;
      font-size: 20px;
      padding: 10px 50px;
      color: #fff;
      margin-top: 10px;
      border: 1px solid #eee;
      border-radius: 20px;
      box-shadow: 5px 5px 5px #eee;
      text-shadow: none;
    }

    body {
      font-family:Arial, Sans-Serif;
      background: #B9DFFF;
    }

    label {
      color: darkblue;
      font-weight: bold;
      margin-top: 10px;
    }

    /* Navbar styles */
    .navbar {
      display: flex;
      align-items: center;
      background-color: #333;
      color: #fff;
      height: 60px;
      padding: 10px 20px;
      margin-bottom: 30px;
    }

    /* Logo styles */
    .navbar-logo {
      display: flex;
      align-items: center;
      margin-right: auto;
      font-size: 30px;
      font-weight: bold;
    }
  </style>
  {% block head %}
  {% endblock %}
</head>
<body>
<nav class="navbar">
  <!-- Logo and text -->
  <div class="navbar-logo">
    <img src="{{ full_url_for('home') }}assets/images/logo.png" alt="Logo" style="width: 60px; height: 60px; border-radius: 50%; margin-right: 10px;">
    {% block header %}{% endblock %}
  </div>
  {% block menu %}{% endblock %}
</nav>
{% block content %}{% endblock %}
</body>
</html>
