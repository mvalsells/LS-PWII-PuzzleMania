{% extends "base.twig" %}

{% block head %}
    <title>Join Team | PuzzleMania</title>
    <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/navbar_styles.css"/>
{% endblock %}

{% block name %}Join a Team{% endblock %}

{% block header %}
    <!-- Dropdown -->
    <div class="dropdown">
        <!-- Email -->
        <button class="dropbtn">
            {% if email is not defined %}
                Menu
            {% else %}
                {{ email }}
            {% endif %}
        </button>
        <!-- Logout suboption -->
        <div class="dropdown-content">
            <a href="/">Home</a>
            <a href="/profile">Your Profile</a>
            <a href="/riddle">List riddles</a>
            <a href="/log-out">Logout</a>
        </div>
    </div>
{% endblock %}

{% block content %}
    {% if notifs is not empty %}
        {% for notif in notifs %}
            <p class="error">{{ notif }}</p>
        {% endfor %}
    {% endif %}

    <h2>Join a Team</h2>
    {% if teams is not empty %}
        <form action="/join" method="POST">
            {% for team in teams %}
                <input type="radio" name="team-{{ team.getTeamId() }}" id="{{ team.getTeamId() }}" value="{{ team.getTeamId() }}">
                <label for="team-{{ team.getTeamId() }}">{{ team.getTeamName() }}</label>
                <br/>
            {% endfor %}
            <button type="submit" name="joinTeam">Join Team</button>
        </form>
    {% else %}
        <p>No incomplete teams. You can only create your own team.</p>
    {% endif %}

    <h2>Create a Team</h2>
    <form action="/join" method="POST">
        <label for="teamName">Team Name</label>
        <input type="text" name="teamName" id="teamName" class="form-control">
        <br/>
        <button type="submit" name="createTeam">Create Team</button>
    </form>

{% endblock %}