{% extends "base.twig" %}

{% block head %}
    <title>Join Team | PuzzleMania</title>
    <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/navbar_styles.css"/>
{% endblock %}

{% block name %}Join a Team{% endblock %}

{% block header %}
    <!-- Dropdown -->
    <div class="dropdown">
        <!-- Email -->
        <button class="dropbtn">
            {% if email is not defined %}
                Menu
            {% else %}
                {{ email }}
            {% endif %}
        </button>
        <!-- Logout suboption -->
        <div class="dropdown-content">
            <a href="/">Home</a>
            <a href="/profile">Your Profile</a>
            <a href="/riddle">List riddles</a>
            <a href="/log-out">Logout</a>
        </div>
    </div>
{% endblock %}

{% block content %}
    {% if notifs is not empty %}
        {% for notif in notifs %}
            <p class="error">{{ notif }}</p>
        {% endfor %}
    {% endif %}
    <div class="row">

        <div class="col-md-6">
            {% if teams is not empty %}
                <h2>Join a Team</h2>
                <form action="/join" method="POST">
                    {% for team in teams %}
                        <div class="form-check">
                            <input type="radio" name="team" id="{{ team.getTeamId() }}" value="{{ team.getTeamId() }}" class="form-check-input">
                            <label for="{{ team.getTeamId() }}" class="form-check-label">{{ team.getTeamName() }}</label>
                        </div>
                    {% endfor %}
                    <button type="submit" class="btn btn-primary" name="joinTeam">Join Team</button>
                </form>
            {% else %}
                <p>No incomplete teams. You can only create your own team.</p>
            {% endif %}
        </div>

        <div class="col-md-6">
            <h2>Create a Team</h2>
            <form action="/join" method="POST">
                <div class="form-group">
                    <label for="teamName">Team Name</label>
                    <input type="text" name="teamName" id="teamName" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary" name="createTeam">Create Team</button>
            </form>
        </div>
    </div>

{% endblock %}